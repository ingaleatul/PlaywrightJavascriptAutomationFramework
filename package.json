{
  "name": "playwright-javascript-framework",
  "version": "1.0.0",
  "description": "Playwright JavaScript Testing Framework with Page Object Model, Allure Reporting, and Data-Driven Tests",
  "main": "index.js",
  "scripts": {
    "test": "npm run clean:screenshots && npm run clean:videos && npm run allure:clean && playwright test",
    "clean:videos": "rm -rf test-results/videos && mkdir -p test-results/videos",
    "clean:screenshots": "rm -rf screenshots && mkdir screenshots",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:all": "playwright test --project=chromium --project=firefox --project=webkit",
    "allure:report": "allure generate allure-results --clean -o allure-report && allure open allure-report",
    "allure:clean": "rm -rf allure-results allure-report"
  },
  "keywords": [
    "playwright",
    "testing",
    "page-object-model",
    "allure",
    "data-driven"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "allure-playwright": "^3.1.0",
    "dotenv": "^16.3.1"
  }
}
